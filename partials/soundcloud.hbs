{{! https://developers.soundcloud.com/docs/widget }}
<div class="content-list" id="{{ slug }}">
    <div class="row">
        <div class="col-xs-12 content-list-item-hed">
            <h3 class="name-head">{{ name }}<span class="slug-link">&ensp;<a href="#{{ slug }}"><i class="fa fa-link"></i></a></span></h3>
            <h3 class="name-subhead"><small>{{ title }}</small></h3>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <iframe width="100%" height="166" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/{{ track_number }}&amp;color=395271&amp;theme_color=f7f7f7&amp;auto_play=false&amp;hide_related=false&amp;show_comments=false&amp;show_user=false&amp;show_reposts=false&amp;sharing=false&amp;show_playcount=false&amp;show_artwork=false"></iframe>
        </div>
    </div>
</div>
